@model Mercado
@{
    ViewData["Title"] = "Cadastrar";
}

<h1 style="margin-top: 75px">Cadastrar</h1>

<nac texto="@TempData["msg"]" class="alert-success"></nac>

<!-- Nome, Capacidade, novo ou não, porte e data da abertura e botão submit-->

<form asp-action="Cadastrar" asp-controller="Mercado" class="form-group">

    <partial name="_Form"/>

    <input asp-action="Cadastrar" type="submit" value="Cadastrar" class="btn btn-outline-primary" />
    <a asp-action="Index" class="btn btn-outline-success">Lista de mercados</a>
</form>

@section Banner {
    <div class="alert alert-danger text-center" >
        Por favor, ao preenchedor se atentar as informações corretas do estabelecimento cadastrado!
    </div>
}